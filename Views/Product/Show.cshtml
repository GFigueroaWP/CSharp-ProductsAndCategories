@{
    ViewData["Title"] = "Home Page";
}

<ul>
    <li><a href="/">Products</a></li>
    <li><a href="/categories">Categories</a></li>
</ul>
<div>
    <h1>@ViewBag.Product.Name</h1>
    <div>
        <h2>Categories</h2>
        @foreach (Association a in ViewBag.Product.Categories)
        {
            <p>@a.Category.Name</p>
        }
    </div>
    <div>
        @model Association
        <form asp-action="AddCategory" asp-controller="Product" method="POST">
            <input hidden asp-for="ProductId" value="@ViewBag.Product.ProductId">
            @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "CategoryId", "Name"))
            <input type="submit" value="Add Category">
        </form>
        
    </div>
</div>